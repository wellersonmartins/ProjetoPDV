procedure TFPrincipal.btnTelaCadastroClick(Sender: TObject);
var telaCadastro: TFCadastro;
begin
  telaCadastro := TFcadastro.Create(nil);
  try
    telaCadastro.ShowModal;
  finally
    telaCadastro.Free;
  end;

end;

